{
	"manifest_version": 2,
	"name": "User Sentiment",
	"version": "1.1",
	"content_scripts": [
	{
		"matches": [
			"<all_urls>"
		],
		"js": ["content.js"]
	}
	],
	"browser_action": {
		"default_popup": "popup.html"   
	},
	"background": {
		"scripts": ["background.js"]
	},
	"permissions": ["activeTab", "storage"],
	"icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}
